<!doctype html>
<html>
<head>
  <title>Conext configuration</title>
  <meta name="decorator" content="atl.admin">
  $webResourceManager.requireResource("com.atlassian.auiplugin:ajs")
</head>
<body>
<form id="admin" class="aui" method="POST">
  <div>
    <label for="apiUrl">Conext API URL (including api version):</label>
    <input type="text" id="apiUrl" name="apiUrl" class="text"
           value="$context.config.apiUrl" placeholder="http://api.openconext.example.com/v1">
  </div>
  <div>
    <label for="callbackUrl">Callback-URL (SSOCookie URL, e.g. 'http://mycrowdinstance/crowd/plugin/servlet/ssocookie'):</label>
    <input type="text" id="callbackUrl" name="callbackUrl" class="text"
           value="$context.config.callbackUrl" placeholder="http://mycrowdinstance/crowd/plugin/servlet/ssocookie">
  </div>
  <div>
    <label for="apiKey">API key</label>
    <input type="text" id="apiKey" name="apiKey" class="text" value="$context.config.apiKey">
  </div>

  <div>
    <label for="apiSecret">API secret</label>
    <input type="text" id="apiSecret" name="apiSecret" class="text" value="$context.config.apiSecret">
  </div>

  <div>
    <label for="groupMapping">Group mapping</label>
    <textarea  id="groupMapping" name="groupMapping" class="text">$context.config.groupMappingAsString</textarea>
  </div>
  <div>
    <input type="submit" value="Save" class="button">
  </div>
</form>
</body>
</html>
